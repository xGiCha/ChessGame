<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/messageTxtV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_solution"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/errorBtn"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/ok"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/messageTxtV"
        app:layout_constraintStart_toStartOf="@+id/messageTxtV"
        app:layout_constraintTop_toBottomOf="@+id/messageTxtV" />

</androidx.constraintlayout.widget.ConstraintLayout>